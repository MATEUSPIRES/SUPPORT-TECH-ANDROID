
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hotel.starling.connectedhotelmaintenance.fragments.CreateTicketsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logosearch"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/searchItemEditText"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="Recherche"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:maxLines="1"
            android:singleLine="true"/>
            />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:id="@+id/listViewAjax"
        android:clickable="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
